<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/card_view"
       android:elevation="15dp"
       android:layout_margin="5dp"
       android:background="#BDBDBD">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="10dp"
           android:paddingTop="10dp">
           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:layout_marginStart="10dp"
               android:id="@+id/companyImage"
               android:src="@drawable/company_image"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/companyImage"
               android:text="BHEL"
               android:layout_marginLeft="30dp"
               android:id="@+id/company"
               android:textSize="20sp"
               android:textColor="#000000"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/category"
               android:layout_marginRight="15dp"
               android:layout_marginEnd="15dp"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textSize="20sp"
               android:textColor="#000000"
               android:text="CAT:PHARMACY"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:orientation="horizontal"
               android:weightSum="4"
               android:id="@+id/stock_layout"
               android:layout_below="@+id/companyImage">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/open"
                   android:padding="10dp"
                   android:textColor="#000000"
                   android:textSize="20sp"
                   android:text="O:23.49"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/close"
                   android:padding="10dp"
                   android:textColor="#000000"
                   android:textSize="20sp"
                   android:text="C:25.47"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/low"
                   android:padding="10dp"
                   android:textColor="#000000"
                   android:textSize="20sp"
                   android:text="L:13.22"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/high"
                   android:padding="10dp"
                   android:textColor="#000000"
                   android:textSize="20sp"
                   android:text="H:19.27"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:weightSum="5"
               android:orientation="horizontal"
               android:layout_below="@+id/stock_layout">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/day_one"
                   android:src="@drawable/up_arrow"
                   android:padding="2dp"/>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/day_two"
                   android:src="@drawable/down_arrow"
                   android:padding="2dp"/>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/day_three"
                   android:src="@drawable/down_arrow"
                   android:padding="2dp"/>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/day_four"
                   android:src="@drawable/up_arrow"
                   android:padding="2dp"/>
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:id="@+id/day_five"
                   android:src="@drawable/down_arrow"
                   android:padding="2dp"/>
           </LinearLayout>
       </RelativeLayout>
   </android.support.v7.widget.CardView>

</LinearLayout>